<h1>New Employee</h1>

<%= form_with model: @employee, url: employees_path, class: "form-horizontal" do |form| %>
  <div class="form-group">
    <%= form.label :user_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.collection_select :user_id, User.all, :id, :name, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :address_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.collection_select :address_id, Address.all, :id, :full_address, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :phone, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :phone, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Create", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>